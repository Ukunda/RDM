# ============================================
# Copy this to .env and adjust as needed.
# docker-compose will auto-load .env from the same directory.

# Host and port the server binds to
RDM_HOST=0.0.0.0
RDM_PORT=8765

# Directory for temporary video uploads (inside the container)
RDM_UPLOAD_DIR=/app/uploads

# Maximum upload file size in MB
RDM_MAX_FILE_SIZE_MB=500

# Room expiry time in seconds (default: 4 hours)
RDM_ROOM_EXPIRY_SECONDS=14400
